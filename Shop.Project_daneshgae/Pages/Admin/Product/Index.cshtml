@page
@model Shop.Project_daneshgae.Pages.Admin.Product.IndexModel
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست دوره ها</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                لیست دوره های سایت
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="col-md-12" style="margin: 10px 0;">
                          
                    <a asp-page="CreateProduct" class="btn btn-outline btn-success">افزودن محصول جدید</a>
                           
                </div>
                
                <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                    <thead>
                        <tr>
                            <th>تصویر</th>
                            <th>عنوان دوره</th>
                            <th>تعداد جلسه</th>
                            <th>دستورات</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model.ListProduct)
                    {
                        <tr>
                            <td>
                                @foreach(var img in item.Images)
                                {
                                <img  src="/img/Products/thump/@img.IamgeName" class="thumbnail" style="max-height:120px;display: inline-grid;"/>
                                }
                            </td>
                            <td>
                                @item.ProductTitle
                            </td>
                            <td>
                                
                            </td>
                            <td>
                                <a href="/Admin/Product/EditProduct/@item.ProductId" class="btn btn-warning btn-sm">
                                    ویرایش
                                </a>
                                <a href="/Admin/Product/DeleteProduct/@item.ProductId" class="btn btn-danger btn-sm">
                                    حذف
                                </a>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
