@page "{id}"
@model Shop.Project_daneshgae.Pages.Admin.Users.DeleteUserModel

@{
    ViewData["Title"] = "حذف  کاربر";
   
}
<div class="col-md-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            حذف کاربر
        </div>
        <div class="panel-body">
            <form method="post">
                <input type="hidden" name="UserId" value="@ViewData["UserId"]"/>
                
                <dl class="dl-horizontal">
                    <dt>نام کاربری : </dt>
                    <dd>@Model.user.UserName</dd>
                    <dt>ایمیل : </dt>
                    <dd>@Model.user.Email</dd>
                    <dt>شماره تلفن : </dt>
                    <dd>@Model.user.Phone</dd>
                    <dt>موجودی کیف پول  : </dt>
                    <dd>@Model.user.Wallet</dd>
                    <dt>تاریخ عضویت : </dt>
                    <dd>@Model.user.CreateDate.ToShamsi()</dd>
                    <dt></dt>
                    <dd>
                        <input type="submit" value="حذف" class="btn btn-danger"/>
                    </dd>
                </dl>
            </form>
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>
